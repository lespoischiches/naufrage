<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/spotReport"
    tools:context=".reportActivity.spotActivity.SpotActivity">

        <Button
            android:id="@+id/btn_retour_spot"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Retour"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <Button
            android:id="@+id/mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mode détaillé"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/btn_retour_spot"
            app:layout_constraintLeft_toRightOf="@id/btn_retour_spot"
            app:layout_constraintTop_toTopOf="parent"/>

        <FrameLayout
            android:id="@+id/test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_retour_spot"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp" />



</androidx.constraintlayout.widget.ConstraintLayout>