<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <Button
        android:id="@+id/result_activity_fisher_return"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="100dp"
        android:layout_height="64dp"
        android:text="retour" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result_activity_linearLayout"
        app:layout_constraintTop_toBottomOf="@id/result_activity_fisher_return"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxHeight="300dp"
        android:layout_weight="1"
        android:hint="Veuillez ecrire votre recherche..."/>
    <Button
        android:id="@+id/result_activity_fisher_search_bouton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/drawable_mini_loupe"
        />
    </LinearLayout>

    <ListView
        android:id="@+id/result_activity_listView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@id/result_activity_linearLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>