<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".reportActivity.spotActivity.SpotFragmentTwoHand">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableRow
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/fish_spot"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="125dp"
                    android:text="Spot de Peche"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"/>

                <Button
                    android:id="@+id/skipper_spot"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="125dp"
                    android:text="Spot des Skippers"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="20dp"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/diver_spot"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="125dp"
                    android:text="Spot de Plongeur "
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp" />

                <Button
                    android:id="@+id/scientist_spot"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="125dp"
                    android:text="Spot de Scientifique "
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="30dp"
                    />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/kitter_spot"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="125dp"
                    android:text="Spot de kitter "
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="125dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="30dp"

                    />
            </TableRow>
        </TableLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>