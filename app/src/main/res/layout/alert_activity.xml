<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/reportPort"
    tools:context=".reportActivity.alertActivity.AlertActivity">

    <Button
        android:id="@+id/btn_retour_signalement"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Retour"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mode détaillé"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/btn_retour_signalement"
        app:layout_constraintTop_toTopOf="parent"/>

    <FrameLayout
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_retour_signalement"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_centerInParent="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>