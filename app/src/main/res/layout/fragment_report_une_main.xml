<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <Button
                    android:id="@+id/emergency"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:text="Urgence \n ce bouton permet d'appeler les urgence"/>

                <Button
                    android:id="@+id/naufrage"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:text="Naufrage\n ce bouton permet d'envoyer vos coordonnées en cas de naufrage"
                    />

                <Button
                    android:id="@+id/help"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:text="Aide \n ce bouton effectue l'Aide" />

            <Button
                android:id="@+id/remains"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="Débris \n ce bouton permet de signaler des débris" />
            <Button
                android:id="@+id/meteo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="Météo\n Ce bouton permet de signaler un événement météorologique"
                />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>