<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <Button
                    android:id="@+id/emergency"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:text="Urgence \n ce bouton effectue le Urgence"/>

                <Button
                    android:id="@+id/naufrage"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:text="Naufrage\n ce bouton effectue le Naufrage"
                    />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:text="Aide \n ce bouton effectue l'Aide" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="Débris \n ce bouton effectue le Débris" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>