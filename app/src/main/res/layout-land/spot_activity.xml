<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/spotReportLand"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reportActivity.alertActivity.AlertActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <Button
            android:id="@+id/btn_retour_spot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retour"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent" />


        <fragment
            android:id="@+id/alert_fragment_evenements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.thomas.bateau.reportActivity.spotActivity.SpotFragmentOneHand"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>