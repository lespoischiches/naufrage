<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Button
        android:id="@+id/fisher_spot_return"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/frame_photo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:text="retour" />

    <FrameLayout
        android:id="@+id/frame_photo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="#009688"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageView
            android:id="@+id/image_spot"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ImageView>
    </FrameLayout>

    <Button
        android:id="@+id/post"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:text="Poster"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/frame_photo"
        app:layout_constraintTop_toTopOf="@id/frame_photo"/>

    <Button
        android:id="@+id/add_photo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:text="Ajouter une phot / vidÃ©o"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/frame_photo"
        app:layout_constraintTop_toBottomOf="@id/post" />

</androidx.constraintlayout.widget.ConstraintLayout>